<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="selectPosition"
            type="int" />

        <variable
            name="fcArray"
            type="String[]" />

        <variable
            name="tbArray"
            type="String[]" />

        <variable
            name="zcArray"
            type="String[]" />

        <variable
            name="fragment"
            type="com.example.godcode.ui.fragment.asset.BaseAssetFragment" />

        <variable
            name="assetData"
            type="com.example.godcode.ui.fragment.asset.AssetData" />

        <variable
            name="title"
            type="String" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/title"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:maxEms="5"
                android:singleLine="true"
                android:text="@{title}"
                android:textColor="#fff"
                android:textSize="20sp" />


            <FrameLayout
                android:id="@+id/option"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tv_option"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_option"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/config"
                    android:layout_gravity="center" />


            </FrameLayout>


        </RelativeLayout>

        <include
            layout="@layout/asset_head"
            bind:assetData="@{assetData}"
            bind:fcArray="@{fcArray}"
            bind:fragment="@{fragment}"
            bind:selectPosition="@{selectPosition}"
            bind:tbArray="@{tbArray}"
            bind:zcArray="@{zcArray}" />


        <com.example.godcode.ui.view.MyListView
            android:id="@+id/lv_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/bg2"
            android:dividerHeight="5dp" />

    </LinearLayout>
</layout>