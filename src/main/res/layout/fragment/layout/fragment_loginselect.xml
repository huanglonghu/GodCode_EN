<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="presenter"
            type="com.example.godcode.presenter.Presenter" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main">

        <ImageView
            android:layout_width="542pt"
            android:layout_height="125pt"
            android:layout_marginTop="662pt"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/title" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="966pt"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_a2"
            android:paddingLeft="65pt"
            android:paddingRight="65pt">


            <TextView
                android:id="@+id/wxdl"
                android:layout_width="match_parent"
                android:layout_height="180pt"
                android:layout_marginTop="165pt"
                android:background="@drawable/btn_login1"
                android:gravity="center"
                android:text="CONTINUE WITH WECHAT"
                android:textColor="#fff"
                android:textSize="33pt" />

            <TextView
                android:id="@+id/zhdl"
                android:layout_width="match_parent"
                android:layout_height="180pt"
                android:layout_below="@id/wxdl"
                android:layout_marginTop="80pt"
                android:background="@drawable/btn_login2"
                android:gravity="center"
                android:text="LOGIN"
                android:textColor="#fff"
                android:textSize="33pt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="77pt">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have account ? "
                    android:textColor="#000"
                    android:textSize="40pt" />

                <TextView
                    android:id="@+id/step2regiter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textColor="@color/b2"
                    android:textSize="49pt" />


            </LinearLayout>
        </RelativeLayout>


    </FrameLayout>
</layout>


