<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="registerBody"
            type="com.example.godcode_en.bean.RegisterBody" />

        <variable
            name="presenter"
            type="com.example.godcode_en.presenter.Presenter" />

        <variable
            name="isEmail"
            type="boolean" />


        <variable
            name="fragment"
            type="com.example.godcode_en.ui.fragment.newui.login.RegisterFragment" />

        <import type="android.view.View" />


    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60pt"
            android:layout_marginTop="130pt"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="101pt"
                android:layout_height="87pt"
                android:onClick="@{()->presenter.back()}"
                android:src="@drawable/fanhui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="@android:color/white"
                android:textSize="50pt" />

        </LinearLayout>


        <ImageView
            android:layout_width="542pt"
            android:layout_height="125pt"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="662pt"
            android:src="@drawable/title" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_a2"
            android:orientation="vertical"
            android:paddingLeft="60pt"
            android:paddingRight="60pt">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130pt"
                android:text="USERNAME"
                android:textColor="#000"
                android:textSize="30pt" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180pt"
                android:layout_marginTop="40pt"
                android:background="@drawable/shape_a5"
                android:gravity="center_vertical">


                <ImageView
                    android:layout_width="46pt"
                    android:layout_height="52pt"
                    android:layout_marginLeft="80pt"
                    android:src="@drawable/ico_name" />

                <EditText
                    android:id="@+id/et_account"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="62pt"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Username"
                    android:textSize="38pt" />


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44pt"
                android:text="EMAIL"
                android:textColor="#000"
                android:textSize="30pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180pt"
                android:layout_marginTop="44pt"
                android:background="@drawable/shape_a5"
                android:gravity="center_vertical">


                <ImageView
                    android:layout_width="46pt"
                    android:layout_height="52pt"
                    android:layout_marginLeft="80pt"
                    android:src="@drawable/ico_emall" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="62pt"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:textSize="38pt" />


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44pt"
                android:text="SMS CODE"
                android:textColor="#000"
                android:textSize="30pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180pt"
                android:layout_marginTop="44pt"
                android:gravity="center_vertical">


                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:paddingLeft="30pt"
                    android:background="@drawable/shape_a5"
                    android:inputType="number"
                    android:hint="SMS Code"
                    android:textSize="38pt" />

                <TextView
                    android:id="@+id/send"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="150pt"
                    android:layout_marginLeft="20pt"
                    android:background="@drawable/btn_login2"
                    android:gravity="center"
                    android:text="SEND CODE"
                    android:textColor="#fff"
                    android:textSize="40pt"
                    android:textStyle="bold" />



            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44pt"
                android:text="PASSWORD"
                android:textColor="#000"
                android:textSize="30pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180pt"
                android:layout_marginTop="44pt"
                android:background="@drawable/shape_a5"
                android:gravity="center_vertical">


                <ImageView
                    android:layout_width="46pt"
                    android:layout_height="52pt"
                    android:layout_marginLeft="80pt"
                    android:src="@drawable/ico_pass" />

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="62pt"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="38pt" />


                <ImageView
                    android:id="@+id/eye"
                    android:layout_width="62pt"
                    android:layout_height="60pt"
                    android:layout_marginRight="64pt"
                    android:src="@drawable/eye_select" />


            </LinearLayout>


            <TextView
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="180pt"
                android:layout_centerInParent="true"
                android:layout_marginTop="60pt"
                android:background="@drawable/btn_login2"
                android:gravity="center"
                android:text="REGISTER"
                android:textColor="#fff"
                android:textSize="40pt" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30pt"
                android:layout_marginTop="70pt">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hava a Account ? "
                    android:textColor="#000"
                    android:textSize="40pt" />

                <TextView
                    android:id="@+id/step2Login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="@color/b2"
                    android:textSize="49pt" />

            </LinearLayout>


        </LinearLayout>


    </FrameLayout>

</layout>