<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="registerBody"
            type="com.example.godcode.bean.RegisterBody" />

        <variable
            name="presenter"
            type="com.example.godcode.presenter.Presenter" />

        <variable
            name="isEmail"
            type="boolean" />


        <variable
            name="fragment"
            type="com.example.godcode.ui.fragment.loginActivity.RegisterFragment" />

        <import type="android.view.View" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageButton
            android:id="@+id/exit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/exit"
            android:onClick="exit" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Sign up"
                android:textSize="60pt"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/cb_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="@{isEmail}"
                android:text="Enable email registration"
                android:textSize="40pt" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_a2"
            android:orientation="vertical"
            android:showDividers="middle|beginning|end">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:divider="@drawable/divider_a2"
                android:gravity="center_vertical"
                android:showDividers="middle"
                android:visibility="@{isEmail?View.VISIBLE:View.GONE}">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email"
                    android:textColor="#000"
                    android:textSize="40pt" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:text="@={registerBody.emailAddress}"
                    android:textSize="40pt" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:divider="@drawable/divider_a2"
                android:gravity="center_vertical"
                android:showDividers="middle">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phone"
                    android:textColor="#000"
                    android:textSize="40pt" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="Enter phone"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:text="@={registerBody.phoneNumber}"
                    android:textSize="40pt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:divider="@drawable/divider_a2"
                android:gravity="center_vertical"
                android:showDividers="middle">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SMS Code"
                    android:textColor="#000"
                    android:textSize="40pt" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Enter verification code"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:text="@={registerBody.verificationCode}"
                        android:textSize="40pt" />

                    <TextView
                        android:id="@+id/yzm"
                        android:layout_width="162pt"
                        android:layout_height="86pt"
                        android:background="@drawable/shape_tv"
                        android:gravity="center"
                        android:text="Send"
                        android:textColor="#000"
                        android:textSize="34pt" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:divider="@drawable/divider_a2"
                android:gravity="center_vertical"
                android:showDividers="middle">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Password"
                    android:textColor="#000"
                    android:textSize="40pt" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="Enter Password"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:text="@={registerBody.password}"
                    android:textSize="40pt" />

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_wxdl"
            android:gravity="center"
            android:text="Sign up"
            android:textColor="#fff"
            android:textSize="20sp" />

    </LinearLayout>

</layout>