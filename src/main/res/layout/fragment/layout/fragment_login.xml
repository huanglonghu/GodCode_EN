<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="loginBody"
            type="com.example.godcode.bean.LoginBody" />

        <variable
            name="presenter"
            type="com.example.godcode.presenter.Presenter" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130pt"
            android:layout_marginLeft="60pt"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="101pt"
                android:layout_height="87pt"
                android:src="@drawable/fanhui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@android:color/white"
                android:textSize="50pt" />

        </LinearLayout>


        <ImageView
            android:layout_width="542pt"
            android:layout_height="125pt"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="662pt"
            android:src="@drawable/title" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1248pt"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_a2"
            android:orientation="vertical"
            android:paddingLeft="60pt"
            android:paddingRight="60pt">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130pt"
                android:text="USERNAME"
                android:textColor="#000"
                android:textSize="30pt" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180pt"
                android:layout_marginTop="40pt"
                android:background="@drawable/shape_a5"
                android:gravity="center_vertical">


                <ImageView
                    android:layout_width="46pt"
                    android:layout_height="52pt"
                    android:layout_marginLeft="80pt"
                    android:src="@drawable/ico_name" />

                <EditText
                    android:id="@+id/et_account"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="62pt"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Username"
                    android:textSize="38pt" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44pt"
                android:text="PASSWORD"
                android:textColor="#000"
                android:textSize="30pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180pt"
                android:layout_marginTop="44pt"
                android:background="@drawable/shape_a5"
                android:gravity="center_vertical">


                <ImageView
                    android:layout_width="46pt"
                    android:layout_height="52pt"
                    android:layout_marginLeft="80pt"
                    android:src="@drawable/ico_pass" />

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="62pt"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:textSize="38pt" />


                <ImageView
                    android:id="@+id/eye"
                    android:layout_width="62pt"
                    android:layout_height="60pt"
                    android:layout_marginRight="64pt"
                    android:src="@drawable/eye_select" />


            </LinearLayout>

            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="66pt"
                android:text="Forgot Password ?"
                android:textColor="#000"
                android:textSize="42pt" />


            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="180pt"
                android:layout_centerInParent="true"
                android:layout_marginTop="60pt"
                android:background="@drawable/btn_login2"
                android:gravity="center"
                android:text="LOGIN"
                android:textColor="#fff"
                android:textSize="40pt" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30pt"
                android:layout_gravity="center_horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have account ? "
                    android:textColor="#000"
                    android:textSize="40pt" />

                <TextView
                    android:id="@+id/step2regiter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textColor="@color/b2"
                    android:textSize="49pt" />


            </LinearLayout>


        </LinearLayout>


    </FrameLayout>
</layout>