<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="getVerification"
            type="com.example.godcode_en.bean.GetVerification" />

        <variable
            name="type"
            type="int" />

        <variable
            name="presenter"
            type="com.example.godcode_en.presenter.Presenter" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60pt"
            android:layout_marginTop="130pt"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="101pt"
                android:layout_height="87pt"
                android:src="@drawable/fanhui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verification"
                android:textColor="@android:color/white"
                android:textSize="50pt" />

        </LinearLayout>


        <ImageView
            android:layout_width="542pt"
            android:layout_height="125pt"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="662pt"
            android:src="@drawable/title" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1130pt"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_a2"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="60pt"
            android:paddingRight="60pt">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="104pt"
                android:text="Check Your Email"
                android:textColor="#000"
                android:textSize="43pt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45pt"
                android:gravity="center_horizontal"
                android:text="Delivious has sent a code to verify the forgotten password"
                android:textColor="@color/g1"
                android:textSize="43pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="133pt">

                <EditText
                    android:id="@+id/code1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140pt"
                    android:background="@drawable/shape_a5"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/code2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140pt"
                    android:layout_marginLeft="33pt"
                    android:gravity="center"
                    android:background="@drawable/shape_a5"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/code3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140pt"
                    android:layout_marginLeft="33pt"
                    android:gravity="center"
                    android:background="@drawable/shape_a5"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/code4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140pt"
                    android:layout_marginLeft="33pt"
                    android:background="@drawable/shape_a5"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/code5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140pt"
                    android:layout_marginLeft="33pt"
                    android:gravity="center"
                    android:background="@drawable/shape_a5"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/code6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140pt"
                    android:layout_marginLeft="33pt"
                    android:gravity="center"
                    android:background="@drawable/shape_a5"
                    android:inputType="number"
                    android:maxLength="1" />

            </LinearLayout>


            <TextView
                android:id="@+id/verifiy"
                android:layout_width="match_parent"
                android:layout_height="160pt"
                android:layout_centerInParent="true"
                android:layout_marginTop="68pt"
                android:background="@drawable/btn_login2"
                android:gravity="center"
                android:text="VERIFICATION"
                android:textColor="#fff"
                android:textSize="40pt" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="78pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resend : "
                    android:textColor="@android:color/black"
                    android:textSize="42pt" />

                <TextView
                    android:id="@+id/djs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/b2"
                    android:textSize="42pt" />


            </LinearLayout>


        </LinearLayout>


    </FrameLayout>
</layout>