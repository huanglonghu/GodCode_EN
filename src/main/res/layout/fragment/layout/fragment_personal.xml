<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="com.example.godcode.presenter.Presenter" />

        <variable
            name="user"
            type="com.example.godcode.greendao.entity.User" />

        <variable
            name="fragment"
            type="com.example.godcode.ui.fragment.newui.PresonalFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="60pt"
        android:paddingRight="60pt">


        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="307pt"
            android:layout_height="307pt"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="242pt" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130pt"
            android:text="USERNAME"
            android:textColor="#000"
            android:textSize="30pt" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180pt"
            android:layout_marginTop="40pt"
            android:background="@drawable/shape_a5"
            android:gravity="center_vertical">


            <ImageView
                android:layout_width="46pt"
                android:layout_height="52pt"
                android:layout_marginLeft="80pt"
                android:src="@drawable/ico_name" />

            <EditText
                android:id="@+id/et_userName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="62pt"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Username"
                android:text="@{user.userName}"
                android:textSize="33pt" />


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44pt"
            android:text="EMAIL"
            android:textColor="#000"
            android:textSize="30pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180pt"
            android:layout_marginTop="44pt"
            android:background="@drawable/shape_a5"
            android:gravity="center_vertical">


            <ImageView
                android:layout_width="56pt"
                android:layout_height="46pt"
                android:layout_marginLeft="80pt"
                android:src="@drawable/ico_emall" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="62pt"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Email"
                android:text="@{user.emailAddress}"
                android:textSize="33pt" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44pt"
            android:text="PHONE NUMBER"
            android:textColor="#000"
            android:textSize="30pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180pt"
            android:layout_marginTop="44pt"
            android:background="@drawable/shape_a5"
            android:gravity="center_vertical">


            <ImageView
                android:layout_width="66pt"
                android:layout_height="66pt"
                android:layout_marginLeft="80pt"
                android:src="@drawable/ico_line" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="62pt"
                android:layout_weight="1"
                android:background="@null"
                android:hint="PhoneNumber"
                android:text="@{user.phoneNumer}"
                android:textSize="33pt" />


        </LinearLayout>

        <TextView
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="180pt"
            android:layout_centerInParent="true"
            android:layout_marginTop="60pt"
            android:background="@drawable/btn_login2"
            android:gravity="center"
            android:text="UPDATE"
            android:textColor="#fff"
            android:textSize="33pt" />


    </LinearLayout>
</layout>