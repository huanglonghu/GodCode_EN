<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="com.example.godcode_en.presenter.Presenter" />

        <variable
            name="mainPresent"
            type="int" />

        <variable
            name="fragment"
            type="com.example.godcode_en.ui.fragment.newui.asset.RevenueConfigFragment" />

        <variable
            name="name"
            type="String" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170pt"
            android:paddingLeft="60pt"
            android:paddingRight="60pt">

            <ImageView
                android:id="@+id/back"
                android:layout_width="50pt"
                android:layout_height="74pt"
                android:padding="10pt"
                android:src="@drawable/back_a2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56pt"
                android:layout_toRightOf="@id/back"
                android:text="Income Shared Percentage"
                android:textColor="@color/t6"
                android:textSize="48pt"
                android:textStyle="bold" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="327pt"
            android:background="@drawable/shape_a4"
            android:orientation="vertical"
            android:paddingLeft="60pt"
            android:paddingRight="60pt">


            <ListView
                android:id="@+id/lvRevenueconfig"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/addRevenue"
                android:layout_width="match_parent"
                android:layout_height="180pt"
                android:layout_marginBottom="100pt"
                android:background="@drawable/shape_a6"
                android:gravity="center"
                android:text="ADD NEW"
                android:textColor="@color/t9"
                android:textSize="33pt" />

        </LinearLayout>


    </FrameLayout>
</layout>