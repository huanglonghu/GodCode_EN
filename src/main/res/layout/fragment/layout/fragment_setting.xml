<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="com.example.godcode_en.presenter.Presenter" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68pt"
            android:layout_marginTop="140pt"
            android:gravity="center_vertical">


            <ImageView
                android:layout_width="114pt"
                android:layout_height="114pt"
                android:onClick="@{()->presenter.back()}"
                android:src="@drawable/setting_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45pt"
                android:text="Setting"
                android:textColor="@color/t6"
                android:textSize="48pt" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="326pt"
            android:background="@drawable/shape_a4"
            android:orientation="vertical"
            android:paddingLeft="45pt">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="102pt"
                android:text="SETTINGS"
                android:textColor="@color/t7"
                android:textSize="35pt" />

            <RelativeLayout
                android:id="@+id/changePwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Change Password"
                    android:textColor="@color/t4"
                    android:textSize="43pt" />

                <ImageView
                    android:layout_width="22pt"
                    android:layout_height="36pt"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="72pt"
                    android:src="@drawable/settings_right" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="178pt"
                android:text="APP"
                android:textColor="@color/t7"
                android:textSize="35pt" />

            <RelativeLayout
                android:id="@+id/language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Language"
                    android:textColor="@color/t4"
                    android:textSize="43pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="44pt"
                    android:text="English"
                    android:textColor="@color/t8"
                    android:textSize="34pt" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Version"
                    android:textColor="@color/t4"
                    android:textSize="43pt" />

                <TextView
                    android:id="@+id/versionCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="44pt"
                    android:textColor="@color/t8"
                    android:textSize="34pt" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Update"
                    android:textColor="@color/t4"
                    android:textSize="43pt" />

                <ImageView
                    android:layout_width="22pt"
                    android:layout_height="36pt"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="72pt"
                    android:src="@drawable/settings_right" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100pt">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Push-notifications"
                    android:textColor="@color/t4"
                    android:textSize="43pt" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="53pt" />

            </RelativeLayout>


        </LinearLayout>


    </FrameLayout>
</layout>