<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/t5"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1104pt"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_b10"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75pt"
                android:layout_marginTop="110pt"
                android:text="Product Operation Price"
                android:textColor="#fff"
                android:textSize="58pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75pt"
                android:layout_marginTop="20pt"
                android:text="( per cycle )"
                android:textColor="@color/t22"
                android:textSize="58pt" />


            <com.example.godcode_en.ui.view.customview.ruler.ScrollRulerLayout
                android:id="@+id/ruler_view"
                android:layout_width="match_parent"
                android:layout_height="224pt"
                android:layout_gravity="center"
                android:layout_marginTop="100pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="56pt"
                android:text="USD DOLLAR"
                android:textColor="@color/t20"
                android:textSize="36pt" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="136pt">

                <TextView
                    android:id="@+id/cancle"
                    android:layout_width="410pt"
                    android:layout_height="178pt"
                    android:background="@drawable/shape_b3"
                    android:gravity="center"
                    android:text="CANCEL"
                    android:textColor="@color/b2"
                    android:textSize="34pt" />


                <TextView
                    android:id="@+id/done"
                    android:layout_width="410pt"
                    android:layout_height="178pt"
                    android:layout_marginLeft="56pt"
                    android:background="@drawable/shape_b4"
                    android:gravity="center"
                    android:text="DONE"
                    android:textColor="@android:color/white"
                    android:textSize="34pt" />


            </LinearLayout>


        </LinearLayout>


    </FrameLayout>
</layout>