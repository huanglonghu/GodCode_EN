                android:layout_marginTop="77pt"
                android:layout_marginBottom="120pt"
                android:paddingLeft="60pt"
                android:paddingRight="60pt">

                <TextView
                    android:layout_width="410pt"
                    android:layout_height="178pt"
                    android:background="@drawable/shape_b3"
                    android:gravity="center"
                    android:text="CANCEL"
                    android:textColor="@color/b2"
                    android:textSize="34pt" />


                <TextView
                    android:layout_width="410pt"
                    android:layout_height="178pt"
                    android:layout_marginLeft="56pt"
                    android:background="@drawable/shape_b4"
                    android:gravity="center"
                    android:text="DONE"
                    android:textColor="@android:color/white"
                    android:textSize="34pt" />


            </LinearLayout>


        </LinearLayout>


    </FrameLayout>
