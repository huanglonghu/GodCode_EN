                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85pt"
                    android:text="1 Coin 50 Signam"
                    android:textColor="@color/t15"
                    android:textSize="49pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85pt"
                    android:text="1 Coin 100 Signam"
