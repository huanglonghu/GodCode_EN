<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_main">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60pt"
                android:layout_marginTop="130pt">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="101pt"
                    android:layout_height="87pt"
                    android:layout_centerVertical="true"
                    android:src="@drawable/fanhui" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/back"
                    android:text="Friends"
                    android:textColor="@android:color/white"
                    android:textSize="50pt" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30pt">

                    <ImageView
                        android:id="@+id/search"
                        android:layout_width="48pt"
                        android:layout_height="48pt"
                        android:src="@drawable/search2" />

                    <ImageView
                        android:id="@+id/add"
                        android:layout_width="48pt"
                        android:layout_height="48pt"
                        android:layout_marginLeft="80pt"
                        android:src="@drawable/add6" />


                </LinearLayout>


            </RelativeLayout>


            <ListView
                android:id="@+id/friend_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="327pt"
                android:background="@drawable/shape_a2" />


            <com.example.godcode.ui.view.customview.LetterView
                android:id="@+id/letter_view"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginTop="327pt" />


        </FrameLayout>


    </LinearLayout>


</layout>