<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="revenueDivideItem"
            type="com.example.godcode.bean.RevenueDivideItem" />

        <variable
            name="fragment"
            type="com.example.godcode.ui.fragment.newui.asset.RevenueConfigFragment" />

        <variable
            name="position"
            type="int" />


        <import type="android.view.View" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv"
            android:layout_width="186pt"
            android:layout_height="186pt" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58pt"
            android:layout_toRightOf="@id/iv"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{revenueDivideItem.name}"
                android:textColor="@android:color/black"
                android:textSize="50pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32pt"
                android:textColor="@color/t18"
                android:textSize="40pt" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text='@{revenueDivideItem.divideRate+"%"}'
            android:textColor="@color/t19"
            android:textSize="44pt" />


    </RelativeLayout>
</layout>