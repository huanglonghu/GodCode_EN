<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="getVerification"
            type="com.example.godcode.bean.GetVerification" />

        <variable
            name="type"
            type="int" />

        <variable
            name="presenter"
            type="com.example.godcode.presenter.Presenter" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include
            layout="@layout/layout_toolbar6"
            bind:presenter="@{presenter}"
            bind:title="@{@string/aqyz}" />


        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@drawable/divider5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="56pt"
            android:paddingRight="56pt">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="74pt"
                android:text="为了您的账号安全"
                android:textColor="#000"
                android:textSize="44pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请先验证当前手机"
                    android:textColor="#000"
                    android:textSize="44pt" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30pt"
                    android:textColor="@color/theme_color"
                    android:textSize="34pt" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">


                <EditText
                    android:id="@+id/yzm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textSize="17sp" />


                <Button
                    android:id="@+id/getYzm"
                    android:layout_width="290pt"
                    android:layout_height="78pt"
                    android:background="@drawable/bg_getyzm"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="#fff"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@drawable/divider5" />

            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="72pt"
                android:background="@drawable/bg_getyzm"
                android:enabled="false"
                android:gravity="center"
                android:text="下一步"
                android:textColor="#fff"
                android:textSize="45pt" />


        </LinearLayout>

    </LinearLayout>
</layout>